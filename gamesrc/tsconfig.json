{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"jsx": "react",
		"jsxFactory": "Roact.createElement",
		"module": "commonjs",
		"moduleResolution": "Node",
		"incremental": true,
		"noLib": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ESNext",
		"typeRoots": ["node_modules/@rbxts"],
		"tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
		
		// configurable
		"rootDir": "src",
		"outDir": "out",
		"baseUrl": "src"

